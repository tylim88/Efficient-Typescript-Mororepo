{
    "name": "node-app",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/node-app/src",
    "projectType": "application",
    "targets": {
        "development": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tsc-watch -b packages/node-app/tsconfig.json --onSuccess \"node dist/packages/node-app/src/main.js\""
            }
        },
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "command": "env-cmd -f nx-cloud.env docker-compose -f docker-compose.yml up"
            }
        },
        "start": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node dist/packages/node-app/src/main.js"
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tsc -b packages/node-app/tsconfig.json"
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "fix": true,
                "lintFilePatterns": ["**/*.{ts,tsx,js,jsx,md,json,yml}"]
            }
        },
        "test": {
            "executor": "@nrwl/vite:test",
            "outputs": ["{projectRoot}/coverage"],
            "options": {
                "reportsDirectory": "../../coverage/node-app"
            }
        }
    },
    "tags": []
}

{
    "name": "node-app",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/node-app/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nrwl/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "options": {
                "target": "node",
                "compiler": "tsc",
                "outputPath": "dist/packages/node",
                "main": "packages/node-app/src/main.ts",
                "tsConfig": "packages/node-app/tsconfig.app.json",
                "assets": ["packages/node-app/src/assets"]
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "extractLicenses": true,
                    "inspect": false,
                    "fileReplacements": [
                        {
                            "replace": "packages/node-app/src/environments/environment.ts",
                            "with": "packages/node-app/src/environments/environment.prod.ts"
                        }
                    ]
                }
            }
        },
        "production": {
            "executor": "@nrwl/js:node",
            "options": {
                "buildTarget": "node-app:build"
            },
            "configurations": {
                "production": {
                    "buildTarget": "node-app:build:production"
                }
            }
        },
        "development": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tsc-watch -b packages/node-app/tsconfig.app.json --onSuccess \"node out-tsc/packages/node-app/src/main.js\""
            }
        },
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "command": "env-cmd -f .env docker-compose -f docker-compose.yml up"
            }
        },
        "type": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tsc -b packages/node-app/tsconfig.json"
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "fix": true,
                "lintFilePatterns": [
                    "packages/node-app/**/*.{ts,tsx,js,jsx,md,json,yml}"
                ]
            }
        },
        "test": {
            "executor": "@nrwl/vite:test",
            "options": {
                "reportsDirectory": "../../coverage/node-app",
                "config": "vite.config.ts"
            }
        }
    },
    "tags": []
}

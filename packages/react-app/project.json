{
    "name": "react-app",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/react-app/src",
    "projectType": "application",
    "targets": {
        "bundle": {
            "executor": "@nrwl/vite:build",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "dist/packages/react-app"
            },
            "configurations": {
                "development": {
                    "mode": "development"
                },
                "production": {
                    "mode": "production"
                }
            }
        },
        "serve": {
            "executor": "@nrwl/vite:dev-server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "react-app:bundle"
            },
            "configurations": {
                "development": {
                    "buildTarget": "react-app:bundle:development",
                    "hmr": true
                },
                "production": {
                    "buildTarget": "react-app:bundle:production",
                    "hmr": false
                }
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tsc -b packages/react-app/tsconfig.json && rimraf package/react-app && nx react-app:bundle"
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "fix": true,
                "lintFilePatterns": ["**/*.{ts,tsx,js,jsx,md,json,yml}"]
            }
        },
        "test": {
            "executor": "@nrwl/vite:test",
            "outputs": ["{projectRoot}/coverage"],
            "options": {
                "reportsDirectory": "../../coverage/react-app"
            }
        }
    },
    "tags": []
}

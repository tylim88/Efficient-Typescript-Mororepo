{
    "compileOnSave": false,
    "compilerOptions": {
        "strict": true,
        "rootDir": ".",
        "baseUrl": ".",
        "allowJs": false,
        "noEmit": false,
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2015",
        "lib": ["es2017", "dom"],
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "importHelpers": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@myOrg/node": ["packages/node-libraries/src/index.ts"],
            "@myOrg/jsdom": ["packages/jsdom-libraries/src/index.ts"]
        },
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "types": ["vitest/globals", "node"],
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true
    },
    "files": [],
    "include": []
}
